<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  {% set title = [title, site.title]|join(' Â» ') if title else site.title %}
  <title>{{ title }}</title>
  <meta name="description" content="{{ description or site.description }}">
  <meta name="author" content="Grapefruit Lab">

  <meta property="og:title" content="{{ title }}">
  <meta property="og:type" content="website">
  <meta property="og:url" content="https://www.grapefruitlab.com/">
  <meta property="og:description" content="{{ description or site.description }}">
  {# <meta property="og:image" content="image.png"> #}

  <link rel="icon" href="/favicon.svg" type="image/svg+xml">

  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
</head>

<body>
  <header>
    <h1>{{ title }}</h1>
  </header>
  <main>
    {{ content | safe }}
  </main>
  <footer>
    Copyright &copy; {{ page.date.getUTCFullYear() }} {{ site.title }}
  </footer>
</body>
</html>
