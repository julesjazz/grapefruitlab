<h2>Tickets</h2>

{% for show in admin.shows | sortBy('date') %}
  {% if show.run.length > 0 %}
    <details {% if show.onsale %}open{% endif %}>
      <summary>
        {% if show.onsale %}ðŸ’¸{% endif %}
        {{ show.title }}
      </summary>
      <table>
        <thead>
          <th>Date</th>
          <th data-num>Seats</th>
          <th data-num>Sold</th>
          <th data-num>Remaining</th>
          <th data-num>Income</th>
        </thead>
        <tbody>
          {% for perf in show.run | sortBy('date') %}
            {% set admin_perf = admin.perfs | find(['id', perf.id]) %}
            <tr>
              <th>
                <a href="perfs/{{ perf.show }}/{{ perf.id }}/">{{ perf.date | date }}</a>
              </th>
              <td data-num>{{ perf.seats }}</td>
              <td data-num>{{ perf.sold }}</td>
              <td data-num>{{ perf.onSale }}</td>
              <td data-num>${{ admin_perf.income }}</td>
            </tr>
          {% endfor %}
          <tfoot>
            <tr>
              {% set perfs = admin.perfs | filter('show', show.id) %}
              {% set seats = perfs | getAll('seats') | sum %}
              {% set sold = perfs | getAll('sold') | sum %}
              <th>Totals</th>
              <td data-num>{{ seats }}</td>
              <td data-num>{{ sold }}</td>
              <td data-num>{{ seats - sold }}</td>
              <td data-num>${{ perfs | getAll('income') | sum }}</td>
            </tr>
          </tfoot>
        </tbody>
      </table>
    </details>
  {% endif %}
{% endfor %}


