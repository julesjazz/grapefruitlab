{% import "forms.macros.njk" as form %}

{#
  tickets:
    type: object
    note: |
      keys are used for the option value,
      and values are used for display
#}
{% macro flexible(
  show_id,
  tickets,
  suggested=none
) %}
  <form action="/api/checkout" method="POST">
    {% set selected = tickets | find('display.attrs.selected') %}
    {%- set max = selected.onSale or tickets[0]['onSale'] -%}

    {{- form.input(
      id='max',
      type='hidden',
      value=max
    ) -}}
    {{- form.field(
      label='Preferred Name',
      type='text',
      required=true,
      name='name'
    ) -}}
    {{- form.field(
      label='Show Date',
      type='select',
      required=true,
      name='product',
      options=tickets | getOptions('value', 'display')
    ) -}}
    <p class="form-hint">
      <strong>Tickets available:</strong>
      <output for="field-product" id="tickets-available-output">{{ max or 'SOLD OUT' }}</output>
    </p>
    <div data-fieldgroup>
    {{- form.field(
      label='Number of Tickets',
      type='number',
      required=true,
      name='count',
      value=1,
      input_attrs={
        min: 1,
        max: max
      }
    ) -}}
    {{- form.field(
      label='Name Your Price ($ per ticket)',
      type='number',
      required=true,
      name='price',
      value=suggested,
      input_attrs={
        min: 0.50,
        step: 0.01
      }
    ) -}}
    </div>
    <p class="form-hint">
      <strong>Total Payment:</strong>
      <output for="field-count field-price" id="total-price-output">n/a</output>
    </p>
    {{- form.field(
      label='Notes',
      type='textarea',
      name='note'
    ) -}}
    <div class="form-actions">
      <button type="submit">Checkout</button>
    </div>
  </form>
  <script type='module'>
    const tickets = {{ tickets | jsonify | safe }};
    const show = '{{ show_id }}';
    {% include "checkout.js" %}
  </script>
{% endmacro %}
